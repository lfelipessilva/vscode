[
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "inputFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "inputFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "inputFocus && vim.mode == 'Normal' && activeEditorGroupIndex === 1"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "explorerViewletFocus"
  },
  { "key": "ctrl+f f" , "command": "workbench.action.quickOpen"},
  { "key": "ctrl+f s" , "command": "workbench.action.findInFiles"},
  { "key": "ctrl+t", "command": "workbench.action.terminal.focus" },
  {
    "key": "ctrl+t",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "inputFocus && vim.mode == 'Normal'"
  },
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "inputFocus && vim.mode == 'Normal'"
  }
]
